@model domain.Models.domain_u

@{
    ViewBag.Title = "Adddomain";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="header bg-primary pb-6">
    <div class="container-fluid">
        <div class="header-body">
            <div class="row align-items-center py-4">
                <div class="col-lg-6 col-7">
                    <h6 class="h2 text-white d-inline-block mb-0">Domain</h6>

                </div>
                <div class="col-lg-6 col-5 text-right">
                    <a href="#" class="btn btn-sm btn-neutral">New</a>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container-fluid mt--6">
    <div class="row">

        <div class="col-12 order-xl-1">
            <div class="card">
                <div class="card-header">
                    <div class="row align-items-center">
                        <div class="col-8">
                            <h3 class="mb-0">Create</h3>
                        </div>

                    </div>
                </div>
                <div class="card-body">
                    <form method="post" enctype="multipart/form-data" action="@Url.Action("Adddomain","users")">
                        @Html.AntiForgeryToken()

                        <div class="pl-lg-4">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                            <div class="row">



                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label class="form-control-label" for="userpass">User Name</label>
                                        <input type="text" name="" value="@Session["username"]" class="form-control" readonly />
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label class="form-control-label" for="userpass">Email</label>
                                        <input type="text" name="" value="@Session["useremail"]" class="form-control" readonly />
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label class="form-control-label" for="userpass">Domain</label>
                                        <input type="text" name="domain_name" value="" class="form-control" />
                                        <input type="text" name="domain_user" value="@ViewBag.userid" class="form-control" hidden />
                                        <input type="text" name="domain_status" value="Not_Approve" class="form-control" hidden />
                                    </div>
                                </div>



                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Upload" class="btn btn-primary" />
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

</div>
<br />
<br />
<br />
<br />
<div class="container-fluid mt--6">
    <div class="row">
        <div class="col-12">
            <div class="card">

                <div class="card-body">
                    <a href="@Url.Action("Index","Home")" class="btn btn-sm btn-dark">Back To Index</a>
                </div>
            </div>
        </div>
    </div>

</div>

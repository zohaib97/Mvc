@model domain.Models.userprofile

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="header bg-primary pb-6">
        <div class="container-fluid">
            <div class="header-body">
                <div class="row align-items-center py-4">
                    <div class="col-lg-6 col-7">
                        <h6 class="h2 text-white d-inline-block mb-0">User Profile</h6>

                    </div>
                    <div class="col-lg-6 col-5 text-right">
                        <a href="#" class="btn btn-sm btn-neutral">New</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid mt--6">
        <div class="row">

            <div class="col-12 order-xl-1">
                <div class="card">
                    <div class="card-header">
                        <div class="row align-items-center">
                            <div class="col-8">
                                <h3 class="mb-0">Create</h3>
                            </div>

                        </div>
                    </div>
                    <div class="card-body">
                        <form method="post" action="@Url.Action("Create","userprofiles")" enctype="multipart/form-data">
                            @Html.AntiForgeryToken()

                            <div class="pl-lg-4">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="row">
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <label class="form-control-label" for="username">User Id</label>
                                            <input type="text" name="users_id" readonly value="@ViewBag.user_id" class="form-control" />
                                            @Html.ValidationMessageFor(model => model.proname, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <label class="form-control-label" for="username">Full  Name</label>
                                            <input type="text" name="proname" value="@ViewBag.user_name" class="form-control" />
                                            @Html.ValidationMessageFor(model => model.proname, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <label class="form-control-label" for="input-email">Email</label>
                                            <input type="text" name="proemail" value="@ViewBag.user_email" class="form-control" />
                                            @Html.ValidationMessageFor(model => model.proemail, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <label class="form-control-label" for="userpass">Password</label>
                                            <input type="text" name="propass" value="@ViewBag.user_pass" class="form-control" />
                                            @Html.ValidationMessageFor(model => model.propass, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="col-lg-12">
                                        <div class="form-group">
                                            <label class="form-control-label" for="role_id">Profile Pic</label>
                                            @Html.EditorFor(model => model.proimage, new { htmlAttributes = new { @class = "form-control",@type="file"} })
                                            @Html.ValidationMessageFor(model => model.proimage, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    
                                </div>
                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10">
                                        <input type="submit" value="Update Profile" class="btn btn-primary" />
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <br />
    <br />
    <br />
    <br />
    <div class="container-fluid mt--6">
        <div class="row">
            <div class="col-12">
                <div class="card">

                    <div class="card-body">
                        <a href="@Url.Action("Index","userprofiles")" class="btn btn-sm btn-dark">Back To Index</a>
                    </div>
                </div>
            </div>
        </div>

    </div>


   
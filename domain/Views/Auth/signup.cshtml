@model domain.Models.user

@{
    ViewBag.Title = "signup";
    Layout = "~/Views/Shared/_auth.cshtml";
}
    <style>
        label {
            font-size: 14px;
        }
        h5 {
            font-size: 1.8125rem;
        }
    </style>
<div class="container mt--8 pb-5">
    <div class="row justify-content-center">
        <div class="col-lg-5 col-md-7">
            <div class="card bg-secondary border-0 mb-0">

                <div class="card-body px-lg-5 py-lg-5">
                    <div class="text-center text-muted mb-4">
                        <h5>Sign Up</h5>
                    </div>
                    <form method="post" action="@Url.Action("Signup","Auth")">
                        @Html.AntiForgeryToken()
                        <div class="form-group mb-3">
                            <label>Full Name</label><br />
                            <input class="form-control" placeholder="Enter Your Full Name" required type="text" name="username">

                        </div>
                        <div class="form-group mb-3">
                            <label>Email</label> <br />
                            <input class="form-control" placeholder="Enter Your Email" required type="email" name="useremail">

                        </div>
                        <div class="form-group mb-3">
                            <label>Password</label> <br />
                            <input class="form-control" placeholder="Enter Your Password" type="password" required name="userpass">

                        </div>
                        <div class="form-group mb-3">

                            <label>Contact</label>    <br />
                            <input class="form-control" placeholder="Enter Your Contact" required type="text" name="userphone">

                        </div>
                        <div class="form-group mb-3">

                            <label>Skype Id (Optional)</label> <br />
                            <input class="form-control" placeholder="Enter Your Skype Id (optional)" type="text" name="skype_id">

                        </div>
                        <div class="form-group mb-3">

                            <label>Domian Url</label> <br />
                            <input class="form-control" placeholder="Enter Your Domain Url" required type="text" name="domain">

                        </div>
                        <div class="form-group mb-3">

                            <label class="">Daily Page Views</label> <br />
                            <input class="form-control" placeholder="Enter Your Daily Page Views" required type="text" name="daily_page">

                        </div>
                        <div class="custom-control custom-control-alternative custom-checkbox">
                            <input class="custom-control-input" id=" customCheckLogin" type="checkbox">
                            <label class="custom-control-label" for=" customCheckLogin">
                                <span class="text-muted small"><a href="#">Terms & Condication</a> privacy policy</span>
                            </label>
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary my-4">Sign up</button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-6">
                    <a href="@Url.Action("Index","Auth")" class="text-light"><small>Back To SignIn</small></a>
                </div>
            </div> 
        </div>
    </div>
</div>
